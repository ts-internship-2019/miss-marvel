@model iWasHere.Domain.Models.LandmarkReview

@{
    ViewData["Title"] = "AddReview";
}

    <body>
        <h4>LandmarkReview</h4>
        <h5>work in progress</h5>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddReview">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserId" class="control-label">Username</label>
                        <input asp-for="UserId" class="form-control" value="anonim" />
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReviewTitle" class="control-label">Review title</label>
                        <input asp-for="ReviewTitle" class="form-control" />
                        <span asp-validation-for="ReviewTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReviewComment" class="control-label">Comment</label>
                        <input asp-for="ReviewComment" class="form-control" />
                        <span asp-validation-for="ReviewComment" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @*smthng fishy happening with this*@
                        <label asp-for="LandmarkId" class="control-label"></label>
                        <select asp-for="LandmarkId" class="form-control" asp-items="ViewBag.LandmarkId"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Rating" class="control-label"></label>
                        <input asp-for="Rating" class="form-control" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>
                    <div @*class="form-group"*@>
                        <label class="control-label">
                            Comment with the account you are logged in&nbsp;
                            <input type="checkbox" id="myCheck" onclick="checkuser()">
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save comment" class="btn btn-dark" />
                        <button type="submit" class="btn btn-danger" onclick="cancel()">Cancel</button>
                    </div>
                </form>
            </div>
        </div>

    </body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

