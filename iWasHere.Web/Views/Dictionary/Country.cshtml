@model IEnumerable<iWasHere.Domain.Models.DictionaryCountry>

@{
    ViewData["Title"] = "Country";
}

<h1>Country</h1>

<body>

    <div class="demo-section k-content">
        <div>

            <p>

                @(Html.Kendo().TextBox()
              .Name("countryTextBox")
              .HtmlAttributes(new { style = "width: 20%", title = "Country Name" })
                )

                @(Html.Kendo().Button()
                        .Name("textButton")
                        .HtmlAttributes(new { type = "button" })
                        .Content("Filter")
                        .Events(ev => ev.Click("onClick"))
                )

            </p>
        </div>
    </div>


    @(Html.Kendo().Grid<iWasHere.Domain.Models.DictionaryCountry>()
        .Name("grid")
        .Columns(columns =>
        {
            columns.Bound(c => c.CountryName).Width(150).Filterable(ftb=> ftb.Cell(cell=>cell.Operator("contains").SuggestionOperator(FilterType.Contains)));
            columns.Bound(c => c.CountryCode).Width(150);
        })
        .HtmlAttributes(new { style = "height: 380px;" })
        .Scrollable()
        .Groupable()
        .Sortable()
        .Pageable(pageable => pageable
            .Refresh(true)
            .PageSizes(true)
            .ButtonCount(5))
        .DataSource(dataSource => dataSource
            .Ajax()
            .Read(read => read.Action("Country_Read", "Dictionary"))
        )
    )



    <script>
        function onClick(e) {
            $(e.event.target).closest(".k-button").attr("id");
            console.log("Apasat");
        }

    </script>

</body>

