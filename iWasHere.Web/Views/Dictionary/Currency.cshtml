@model IEnumerable<iWasHere.Domain.Models.DictionaryCurrencyType>

@{
    ViewData["Title"] = "Currency";
}

<h1>Currency</h1>

<body>
    @(Html.Kendo().Grid<iWasHere.Domain.Models.DictionaryCurrencyType>()
  .Name("grid")
  .Columns(columns =>
  {
      columns.Bound(c => c.CurrencyCode).Width(140);
      columns.Bound(c => c.CurrencyName).Width(190);
      columns.Bound(c => c.CurrencyExRate).Width(140);
    

  })
  .HtmlAttributes(new { style = "height: 380px;" })
  .Scrollable()
  .Groupable()
  .Sortable()
  .Pageable(pageable => pageable
      .Refresh(true)
      .PageSizes(true)
      .ButtonCount(5))
  .DataSource(dataSource => dataSource
      .Ajax()
      .Read(read => read.Action("Currency_Read", "Dictionary"))
  )
)
</body>