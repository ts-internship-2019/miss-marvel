@model iWasHere.Domain.DTOs.LandmarkModelList
@{
    ViewData["Title"] = "LandmarkList";
}

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<style>
    body, h1, h2, h3, h4, h5 {
        font-family: "Raleway", sans-serif
    }
</style>



<div class="w3-content" style="max-width:1400px">

    <!-- Header -->
    <header class="w3-container w3-center w3-padding-32">
        <h1><b>LANDMARKS</b></h1>
        <p>Where the story <span class="w3-tag">BEGINS</span></p>
    </header>

    <!-- Grid -->
    <div class="w3-row">

        <!-- Blog entries -->
        <div class="w3-col l8 s12">

            @for (int i = 0; i < Model.LandmarkList.Count; i++)
            {
                <!-- Blog entry -->
                <div class="w3-card-4 w3-margin w3-white">
                    @if (Model.LandmarkList[i].Pictures.Count != 0)
                    {
                        <img src="@Url.Content("~/images/"+ Model.LandmarkList[i].Pictures[0].PictureName)" alt="No Image to display" style="width:100%">
                    }
                    else
                    {
                        <img src="No Image to display" style="width:100%">
                    }
                    <div class="w3-container">
                        <h3><b> @Model.LandmarkList[i].LandmarkName </b></h3>

                    </div>
                    @*https://stackoverflow.com/questions/30940914/javascript-creating-buttons-in-a-loop*@
                    <div class="w3-container">
                        <p>
                            @Model.LandmarkList[i].LandmarkDescription
                        </p>
                        <div class="w3-row">
                            <div class="w3-col m8 s12">
                                <p><input type="button" onClick="readLandmark(@Model.LandmarkList[i].LandmarkId)" value="Read More >>" class="w3-button w3-padding-large w3-white w3-border"></p>
                            </div>
                            <div class="w3-col m4 w3-hide-small">
                                <p><span class="w3-padding-large w3-right"><b>Rating  </b> <span class="w3-tag">0/5</span></span></p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <hr>


        </div>

        <!-- Introduction menu -->
        <div class="w3-col l4">
            <!-- About Card -->
            <div class="w3-card w3-margin w3-margin-top">

                <h4><b>Filters:</b></h4>
                <p>
                <p><label>Landmark:</label></p>
                <p>
                    @(Html.Kendo().TextBox()
                        .Name("custom")
                        .HtmlAttributes(new { style = "width: 70%", title = "custom", id = "txtLandName" })
                    )
                </p>
                <p><label>City:</label></p>
                <p>
                    @(Html.Kendo().TextBox()
                         .Name("custom")
                         .HtmlAttributes(new { style = "width: 70%", title = "custom", id = "txtCityName" })
                    )
                </p>
                <p>
                    @(Html.Kendo().Button()
                             .Name("btnFilter")
                                 .HtmlAttributes(new { style = "background-color:rgb(255, 153, 0); color:white", type = "button", @class = "btn" })
                             .Content("Filter")
                             .Events(e => e.Click("Filter"))
                    )
                    @(Html.Kendo().Button()
                                        .Name("btnDeleteFilters")
                                            .HtmlAttributes(new { style = "background-color:rgb(255, 153, 0); color:white", type = "button", @class = "btn" })
                                        .Content("Delete Filters")
                                        .Events(e => e.Click("deleteFilters"))
                    )
                </p>


                </p>



            </div><hr>


        </div>

        <!-- END GRID -->
    </div><br>

    <!-- END w3-content -->
</div>

<script>

    function readLandmark(landmarkId) {
        window.location = '/Home/LandmarkView?landmarkId=' + landmarkId
    }

</script>


