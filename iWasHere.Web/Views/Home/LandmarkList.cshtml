@model iWasHere.Domain.DTOs.LandmarkModelList
@{
    ViewData["Title"] = "LandmarkList";
}

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<style>
    body, h1, h2, h3, h4, h5 {
        font-family: "Raleway", sans-serif
    }
</style>



<div class="w3-content" style="max-width:1400px">

    <!-- Header -->
    <header class="w3-container w3-center w3-padding-32">
        <h1><b>LANDMARKS</b></h1>
        <p>Where the story <span class="w3-tag">BEGINS</span></p>
    </header>
    <div class="w3-card-4 w3-margin w3-white">


        <div class="w3-container">
          
           
               
                <div class="bgimg">
                    <div class="bgimg">
                        <h2>Filters:</h2>

                        <form asp-action="LandmarkList">
                            <h5>Landmark Name:</h5>
                            <input type="text" asp-for="LandmarkName" id="txtLandmarkName" />
                            <h5>City:</h5>
                            <input type="text" asp-for="City" id="txtCity" />
                            <br /><br />
                            <p>
                                <input type="submit" value="Filter" id="Filter" class="btn" />
                                <button type="submit" value="Delete Filters" onclick="deleteFilters()" id="delFilters" class="btn">Delete Filters</button>

                            </p>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
  
  
    <!-- Grid -->
    <div class="w3-row">

        <!-- Blog entries -->
        <div class="w3-card-4 w3-margin w3-white">

            @for (int i = 0; i < Model.LandmarkList.Count; i++)
            {
                <!-- Blog entry -->
                <div class="w3-card-4 w3-margin w3-white">
                    @if (Model.LandmarkList[i].Pictures.Count != 0)
                    {
                        <img src="@Url.Content("~/images/"+ Model.LandmarkList[i].Pictures[0].PictureName)" alt="No Image to display" style="width:100%">
                    }
                    else
                    {
                        <img src="No Image to display" style="width:100%">
                    }
                    <div class="w3-container">
                        <h3><b> @Model.LandmarkList[i].LandmarkName </b></h3>

                    </div>
                 
                    <div class="w3-container">
                        <p>
                            @Model.LandmarkList[i].LandmarkDescription
                        </p>
                        <div class="w3-row">
                            <div class="w3-col m8 s12">
                                <p><input type="button" onClick="readLandmark(@Model.LandmarkList[i].LandmarkId)" value="Read More >>" class="w3-button w3-padding-large w3-white w3-border"></p>
                            </div>
                            <div class="w3-col m4 w3-hide-small">
                                <p><span class="w3-padding-large w3-right"><b>Rating  </b> <span class="w3-tag">@Model.LandmarkList[i].Rating /10★</span></span></p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <hr>


        </div>

        <!-- Introduction menu -->
        <div class="w3-col l4">
            <!-- About Card -->
            <div class="w3-card w3-margin w3-margin-top">
                


            </div>

        <!-- END GRID -->
    </div><br>

    <!-- END w3-content -->
</div>

<script>

    function readLandmark(landmarkId) {
        window.location = '/Home/LandmarkView?landmarkId=' + landmarkId
    }

    function deleteFilters() {

        $("#txtLandmarkName").val(null);
        $("#txtCity").val(null);


    }

</script>

<style>

    
    .btn {
                background-color: #f4511e;
                border: none;
                color: white;
                padding: 10px 15px;
                text-align: center;
                font-size: 16px;
                width:130px;
                opacity: 0.6;
                transition: 0.3s;
            }

    .btn:hover, .btn1:hover {
                    opacity: 1;
                 
                }
</style>

<style type="text/css">
    .bgimg{
        background-image:url('https://d13ezvd6yrslxm.cloudfront.net/wp/wp-content/images/Kamala-Khan-e1526301458912-700x374.jpg');
        background-size:cover;
    }
</style>


